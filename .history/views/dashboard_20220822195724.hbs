<h6>DashBoard</h6>
<h3>Welcome {{name}}</h3>
<p>Here are your stories</p>
{{#if stories}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
            
        </thead>
        <tbody>
            {{#each stories}}
                <tr>
                    <td><a href="/stories/{{_id}}"</a>{{title}}</td>
                    <td>{{createdAt}}</td>
                    <td><span class="dash-status</td>
                    <td><a href="/stories/edit/{{_id}}" class="btn-floating btn-small waves-effect waves-light blue"><i class="material-icons">edit</i></a></td>
                </tr>
            {{/each}}
        </tbody>
    </table>

{{else}}
    <p> You have not created any stories</p>
{{/if}}


